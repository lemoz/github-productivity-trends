# Example environment file for local development.
# Copy to `.env` and replace the placeholder values.

# SQLite (default) â€” stores data in `prisma/dev.db` locally.
DATABASE_URL="file:./dev.db"

# GitHub API Token (required for data collection)
# Create at: https://github.com/settings/tokens
# Required scopes: public_repo, read:user
GITHUB_TOKEN="YOUR_GITHUB_TOKEN_HERE"

# Optional: deterministic sampling seed for user cohort
SAMPLING_SEED=42

# Optional: minimum contributions in 2020-2021 to include a user
BASELINE_MIN_CONTRIBUTIONS=50

# Optional: override how many users to sample per follower band
# (Default uses the targets baked into USER_BANDS)
USERS_PER_BAND=100
